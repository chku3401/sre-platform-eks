      },
      "targets": [
        {
          "expr": "kube_horizontalpodautoscaler_status_current_metrics_value{namespace=\"demo\"}",
          "legendFormat": "current",
          "refId": "A"
        },
        {
          "expr": "kube_horizontalpodautoscaler_spec_target_metric{namespace=\"demo\"}",
